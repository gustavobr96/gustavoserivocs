# Use a imagem oficial do ASP.NET Core como base
FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS base
WORKDIR /app
EXPOSE 80

# Defina o ambiente
ENV ASPNETCORE_ENVIRONMENT=Production

# Copie os arquivos publicados da aplicação para o contêiner
FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build
WORKDIR /src
COPY ["SistemaBico.Web/SistemaBico.Web.csproj", "SistemaBico.Web/"]
RUN dotnet restore "SistemaBico.Web/SistemaBico.Web.csproj"
COPY . .
WORKDIR "/src/SistemaBico.Web"
RUN dotnet build "SistemaBico.Web.csproj" -c Release -o /app/build

# Publicar a aplicação
FROM build AS publish
RUN dotnet publish "SistemaBico.Web.csproj" -c Release -o /app/publish

# Construa a imagem final
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SistemaBico.Web.dll"]